<p id="notice"><%= notice %></p>

<h1>一覧投稿</h1>


<% @posts.each do |post| %>
  <hr>
  <div>
  <%= markdown(post.content) %>
    <td><%= post.content %></td>
    <td><%= link_to '詳細', post %></td>
    <td><%= link_to '編集', edit_post_path(post) %></td>
    <td><%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
  </div>
<% end %>
<hr>

<%= link_to '新規投稿', new_post_path %>
